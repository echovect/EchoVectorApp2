<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity5">

    <TextView
        android:id="@+id/moreInfo"
        android:visibility="invisible"
        android:layout_width="284dp"
        android:layout_height="78dp"
        android:text="MORE INFO"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.243"></TextView>

    <TextView
        android:layout_width="103dp"
        android:layout_height="32dp"
        android:text="Product Title"
        app:layout_constraintBottom_toTopOf="@+id/mostRecentStatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.238"></TextView>

    <TextView
        android:layout_width="96dp"
        android:layout_height="32dp"
        android:text="Brand Name"
        app:layout_constraintBottom_toTopOf="@+id/mostRecentStatus"
        app:layout_constraintEnd_toStartOf="@+id/details"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.835"></TextView>

    <TextView
        android:id="@+id/mostRecentStatus"
        android:layout_width="174dp"
        android:layout_height="31dp"
        android:background="#5F00"
        android:text="Most Recent Order Status"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.141"></TextView>

    <Button
        android:id="@+id/details"
        android:layout_width="122dp"
        android:layout_height="43dp"
        android:text="DETAILS"
        android:onClick="openDetails"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>